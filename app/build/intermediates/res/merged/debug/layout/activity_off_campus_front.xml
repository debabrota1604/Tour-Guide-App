<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dev.devapp_rkmvu_centre_app.Activity_OffCampus_Front">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFE0B2"
                android:padding="5dp"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Headquarters at Belur Math"
                    android:gravity="center"
                    android:textSize="15dp"/>

                <ImageView
                    android:id="@+id/iv_campus_belurMath"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/belur_campus_medhabhavan"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFE0B2"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Off Campuses of Vivekananda University"
                    android:textColor="#000000"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Narendrapur"
                        android:gravity="center"
                        android:textSize="15dp"/>
                    <ImageView
                        android:id="@+id/iv_campus_narendrapur"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/narendrapur_main"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kolkata"
                        android:gravity="center"
                        android:textSize="15dp"/>
                    <ImageView
                        android:id="@+id/iv_campus_kolkata"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/kolkata_main"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ranchi"
                        android:gravity="center"
                        android:textSize="15dp"/>
                    <ImageView
                        android:id="@+id/iv_campus_ranchi"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/ranchi_main"
                        android:scaleType="fitXY"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Coimbatore"
                        android:gravity="center"
                        android:textSize="15dp"/>
                    <ImageView
                        android:id="@+id/iv_campus_coimbatore"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/coimbatore_main"
                        android:scaleType="centerCrop"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>



</LinearLayout>
